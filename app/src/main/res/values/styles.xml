<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#1E88E5</item>
        <item name="android:titleTextStyle">@style/ActionBarTextTheme</item>
    </style>
    
    <style name="ActionBarTextTheme" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
